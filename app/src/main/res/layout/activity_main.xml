<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eae9e9"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="ca.zaher.m.calculatorapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_operation"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/whit"
            android:enabled="false"
            android:lines="1"
            android:padding="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/text_color"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@color/whit"
            android:enabled="false"
            android:lines="1"
            android:padding="10dp"
            android:text="@string/default_text"
            android:textAlignment="textEnd"
            android:textColor="@color/text_color"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clear_all"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/sub_operation"
            android:onClick="btnClick"
            android:text="@string/all_clear"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_change"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/sub_operation"
            android:onClick="btnClick"
            android:text="@string/change_sign"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_sqr"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/sub_operation"
            android:onClick="btnClick"
            android:text="@string/Square_root"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_division"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/operation_color"
            android:onClick="btnClick"
            android:text="@string/division_operation"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num7"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num8"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num9"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_mult"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/operation_color"
            android:onClick="btnClick"
            android:text="@string/multiply_operation"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num_4"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num_5"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num_6"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/operation_color"
            android:onClick="btnClick"
            android:text="@string/sub_operation"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num_1"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num_2"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num_3"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_sum"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/operation_color"
            android:onClick="btnClick"
            android:text="@string/sum_operation"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/sub_operation"
            android:onClick="btnClick"
            android:text="@string/clear"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/num_0"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_float"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/whit"
            android:onClick="btnClick"
            android:text="@string/float_"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="@dimen/btn_dim"
            android:layout_height="@dimen/btn_dim"
            android:background="@color/operation_color"
            android:onClick="btnClick"
            android:text="@string/equal_operation"
            android:textSize="@dimen/btn_text_size"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</LinearLayout>
